<!DOCTYPE html>

<html lang="pt-BR">
<head>
  <meta charset="utf-8">
  <meta name="viewport"
        content="width=device-width,initial-scale=1,shrink-to-fit=no">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <title><%= app_page_title %></title>

  <%= stylesheet_pack_tag 'application/styles',
                          'data-turbolinks-track': 'reload',
                          media: 'all' %>
  <%= javascript_pack_tag 'application/scripts',
                          'data-turbolinks-track': 'reload' %>

  <%= favicon_link_tags %>
</head>

<body>
  <div class="mb-5">
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <a class="navbar-brand" href="#"><%= app_name %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <% if current_user.manager? %>
            <li class="nav-item active">
              <%= link_to 'IR PARA ADMINISTRAÇÃO', admin_root_path, class: 'nav-link' %>
            </li>
          <% end %>

          <li class="nav-item active">
            <%= link_to destroy_user_session_path, class: 'nav-link',
                                                   method: :delete do %>
              <%= app_icon_text('sign-out', 'Sair') %>
            <% end %>
          </li>
        </ul>
      </div>
    </nav> <br>
  </div>

  <main role="main" class="container mt-5">
    <%= content_for :body_page_title %>

    <%= flash_messages %>

    <%= yield %>
  </main>

  <footer class="footer">
    <div class="container">
      <%= app_version %>
    </div>
  </footer>
</body>
</html>
