<p id="notice"><%= notice %></p>

<h1>Arquivos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Tamanho</th>
      <th>Sha1</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arquivos.each do |arquivo| %>
      <tr>
        <td><%= arquivo.documento.blob.filename %></td>
        <td><%= number_to_human_size arquivo.documento.blob.byte_size %></td>
        <td><%= arquivo.sha1 %></td>
        <td><%= link_to 'Show', arquivo %></td>
        <td><%= link_to 'Edit', edit_arquivo_path(arquivo) %></td>
        <td><%= link_to 'Destroy', arquivo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

